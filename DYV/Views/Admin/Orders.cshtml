@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            background: black;
            color: white;
            padding-top: 20px;
        }

            .sidebar a {
                display: block;
                padding: 10px;
                color: white;
                text-decoration: none;
            }

                .sidebar a:hover, .sidebar .active {
                    background: #333;
                }

        .content {
            margin-left: 260px;
            padding: 20px;
        }

        .btn-export {
            background: black;
            color: white;
            border: none;
            padding: 8px 12px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .action-icons i {
            cursor: pointer;
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <ul>
            <li><a href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
            <li><a href="@Url.Action("Product", "Admin")">Products</a></li>
            <li><a href="@Url.Action("Category", "Admin")">Category</a></li>
            <li><a href="@Url.Action("Coupon", "Admin")">Coupon Code</a></li>
            <li><a href="@Url.Action("Orders", "Admin")" class="active">Orders</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h3>Order Management</h3>

        <!-- Action Buttons -->
        <div class="d-flex justify-content-between my-3">
            <input type="text" class="form-control w-50" placeholder="Search orders...">
            <button class="btn btn-export"><i class="fas fa-file-export"></i> Export</button>
        </div>

        <!-- Orders Table -->
        <table class="table table-bordered bg-white shadow">
            <thead class="table-light">
                <tr>
                    <th><input type="checkbox"></th>
                    <th>ORDER ID</th>
                    <th>CUSTOMER</th>
                    <th>DATE</th>
                    <th>TOTAL</th>
                    <th>PAYMENT STATUS</th>
                    <th>ORDER STATUS</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 1; i <= 5; i++)
                {
                    <tr>
                        <td><input type="checkbox"></td>
                        <td>#ORD-00@i</td>
                        <td>John Doe</td>
                        <td>2024-03-26</td>
                        <td>$150</td>
                        <td><span class="badge bg-success">Paid</span></td>
                        <td><span class="badge bg-warning text-dark">Processing</span></td>
                        <td class="action-icons">
                            <i class="fas fa-eye text-primary"></i>
                            <i class="fas fa-edit text-dark"></i>
                            <i class="fas fa-trash text-danger"></i>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
