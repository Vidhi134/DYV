@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            background: black;
            color: white;
            padding-top: 20px;
        }

            .sidebar a {
                display: block;
                padding: 10px;
                color: white;
                text-decoration: none;
            }

                .sidebar a:hover, .sidebar .active {
                    background: #333;
                }

        .content {
            margin-left: 260px;
            padding: 20px;
        }

        .btn-create {
            background: black;
            color: white;
            border: none;
            padding: 8px 12px;
            margin-right: 5px;
        }

        .btn-delete {
            background: red;
            color: white;
            border: none;
            padding: 8px 12px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .action-icons i {
            cursor: pointer;
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <ul>
            <li><a href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
            <li><a href="@Url.Action("Product", "Admin")">Products</a></li>
            <li><a href="@Url.Action("Category", "Admin")" class="active">Category</a></li>
            <li><a href="@Url.Action("Coupon", "Admin")">Coupon Code</a></li>
            <li><a href="@Url.Action("Orders", "Admin")">Orders</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h3>Category Management</h3>

        <!-- Action Buttons -->
        <div class="d-flex justify-content-between my-3">
            <input type="text" class="form-control w-50" placeholder="Search category...">
            <div>
                <button class="btn btn-create"><i class="fas fa-plus"></i> Create New</button>
                <button class="btn btn-delete"><i class="fas fa-trash"></i> Delete</button>
            </div>
        </div>

        <!-- Category Table -->
        <table class="table table-bordered bg-white shadow">
            <thead class="table-light">
                <tr>
                    <th><input type="checkbox"></th>
                    <th>ID</th>
                    <th>NAME</th>
                    <th>DESCRIPTION</th>
                    <th>STATUS</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 10; i++)
                {
                    <tr>
                        <td><input type="checkbox"></td>
                        <td>2343SDFS</td>
                        <td>Umbrella</td>
                        <td>TOYS, AND ALL ITEMS</td>
                        <td><span class="badge bg-success">AVAILABLE</span></td>
                        <td class="action-icons">
                            <i class="fas fa-edit text-dark"></i>
                            <i class="fas fa-trash text-danger"></i>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
