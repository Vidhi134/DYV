@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            background: black;
            color: white;
            padding-top: 20px;
        }

            .sidebar a {
                display: block;
                padding: 10px;
                color: white;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background: #333;
                }

        .content {
            margin-left: 260px;
            padding: 20px;
        }

        .card {
            border-radius: 10px;
        }

        .table th, .table td {
            vertical-align: middle;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <ul class="list-unstyled">
            <li><a href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
            <li><a href="@Url.Action("Product", "Admin")">Products</a></li>
            <li><a href="@Url.Action("Category", "Admin")">Category</a></li>
            <li><a href="@Url.Action("Coupon", "Admin")">Coupon Code</a></li>
            <li><a href="@Url.Action("Orders", "Admin")">Orders</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="content container-fluid">

        <!-- Order Summary -->
        <div class="row">
            <div class="col-md-3">
                <div class="card p-3 bg-light shadow">
                    <h5>Total Orders</h5>
                    <p><i class="fas fa-shopping-basket text-success"></i> 23,545</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3 bg-light shadow">
                    <h5>Pending Orders</h5>
                    <p><i class="fas fa-clock text-danger"></i> 2,345</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3 bg-light shadow">
                    <h5>Processing Orders</h5>
                    <p><i class="fas fa-sync text-primary"></i> 1,245</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3 bg-light shadow">
                    <h5>Completed Orders</h5>
                    <p><i class="fas fa-check-circle text-success"></i> 19,955</p>
                </div>
            </div>
        </div>

        <!-- Orders Table -->
        <div class="mt-4">
            <table class="table table-bordered bg-white shadow">
                <thead class="table-success">
                    <tr>
                        <th>INVOICE NO</th>
                        <th>CUSTOMER NAME</th>
                        <th>METHOD</th>
                        <th>AMOUNT</th>
                        <th>ORDER TIME</th>
                        <th>STATUS</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 10; i++)
                    {
                        <tr>
                            <td>#DFSD322</td>
                            <td>NITISH KUMAR</td>
                            <td>CASH</td>
                            <td>$324,423</td>
                            <td>May 28, 2024 9:31 AM</td>
                            <td><span class="badge bg-warning text-dark">Pending</span></td>
                            <td>
                                <a href="#" class="text-dark me-2"><i class="fas fa-print"></i></a>
                                <a href="#" class="text-dark"><i class="fas fa-search"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</body>
</html>
