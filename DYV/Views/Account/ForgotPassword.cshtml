<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <!-- Left Side - Image -->
        <div class="col-md-6 d-none d-md-block">
            <img src="https://plus.unsplash.com/premium_photo-1683887064255-1c428d0b3934?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OXx8b25saW5lJTIwc2hvcHBpbmd8ZW58MHx8MHx8fDA%3D"
                 class="img-fluid"
                 alt="Forgot Password Image">
        </div>

        <!-- Right Side - Forgot Password Form -->
        <div class="col-md-6">
            <h2 class="fw-bold text-center">Forgot Your Password?</h2>
            <p class="text-muted text-center">Enter your email address to reset your password.</p>

            <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                <div class="mb-3">
                    <label class="form-label">Email Address</label>
                    <input type="email" class="form-control" name="email" required placeholder="Enter your email">
                </div>
                <div class="mb-3">
                    <label class="form-label">New Password</label>
                    <input type="password" class="form-control" name="new_password" required placeholder="Enter new password">
                </div>
                <div class="mb-3">
                    <label class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" name="confirm_password" required placeholder="Confirm new password">
                </div>

                <button type="submit" class="btn btn-danger w-100">Send Reset Link</button>
            </form>

            <p class="text-center mt-3">
                <a asp-action="Login" asp-controller="Account">Back to Login</a>
            </p>
        </div>
    </div>
</div>
