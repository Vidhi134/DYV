@model User
@{
    ViewData["Title"] = "Sign Up";
}

<!-- Main Container -->
<div class="container">
    <div class="row">
        <!-- Left Side: Image Section -->
        <div class="col-md-6">
            <img src="https://plus.unsplash.com/premium_photo-1683887064255-1c428d0b3934?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OXx8b25saW5lJTIwc2hvcHBpbmd8ZW58MHx8MHx8fDA%3D" class="img-fluid" , alt="Shopping Image">
        </div>

        <!-- Right Side: Sign-Up Form -->
        <div class="col-md-6 d-flex align-items-center">
            <div class="w-75 mx-auto">
                <h2 class="fw-bold">Create an account</h2>
                <p class="text-muted">Enter your details below</p>

                <form asp-action="SignUp" asp-controller="Account" method="post">
                    <div class="mb-3">
                        <input asp-for="FullName" class="form-control" placeholder="Name">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email or Phone Number">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-danger w-100">Create Account</button>

                    <button class="btn btn-outline-dark w-100 mt-2">
                        <img src="https://img.icons8.com/color/16/000000/google-logo.png" alt="Google Logo" />
                        Sign up with Google
                    </button>

                    <p class="text-center mt-3">
                        Already have an account? <a asp-action="Login" asp-controller="Account">Log in</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Footer Section -->
<footer class="mt-5 bg-dark text-white py-5">
    <div class="container">
        <div class="row">
            <!-- Exclusive -->
            <div class="col-md-3">
                <h5>Exclusive</h5>
                <p>Subscribe</p>
                <p>Get 10% off your first order</p>
                <input type="email" class="form-control" placeholder="Enter your email">
            </div>

            <!-- Support -->
            <div class="col-md-3">
                <h5>Support</h5>
                <p>111 Bijoy Sarani, Dhaka, Bangladesh.</p>
                <p>exclusive@gmail.com</p>
                <p>+88015-88888-9999</p>
            </div>

            <!-- Account -->
            <div class="col-md-2">
                <h5>Account</h5>
                <p>My Account</p>
                <p>Login / Register</p>
                <p>Cart</p>
                <p>Wishlist</p>
                <p>Shop</p>
            </div>

            <!-- Quick Links -->
            <div class="col-md-2">
                <h5>Quick Link</h5>
                <p>Privacy Policy</p>
                <p>Terms Of Use</p>
                <p>FAQ</p>
                <p>Contact</p>
            </div>

            <!-- Download App -->
            <div class="col-md-2">
                <h5>Download App</h5>
                <p>Save $3 with App New User Only</p>
                <img src="https://via.placeholder.com/100x40" alt="Google Play">
                <img src="https://via.placeholder.com/100x40" alt="App Store">
            </div>
        </div>

        <hr class="mt-4 bg-white">

        <div class="text-center">
            <p>© Copyright Rimel 2022. All rights reserved.</p>
            <p>
                <i class="bi bi-facebook"></i>
                <i class="bi bi-twitter"></i>
                <i class="bi bi-instagram"></i>
                <i class="bi bi-linkedin"></i>
            </p>
        </div>
    </div>
</footer>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
