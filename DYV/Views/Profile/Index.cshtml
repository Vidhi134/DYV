@{
    ViewData["Title"] = "My Account";
}

<div class="container mt-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <h4 class="fw-bold">Manage My Account</h4>
            <ul class="list-group">
                <li class="list-group-item active"><a href="#" class="text-decoration-none text-dark">My Profile</a></li>
                <li class="list-group-item"><a href="#" class="text-decoration-none text-dark">Address Book</a></li>
                <li class="list-group-item"><a href="#" class="text-decoration-none text-dark">My Payment Options</a></li>
            </ul>
            <h4 class="fw-bold mt-4">My Orders</h4>
            <ul class="list-group">
                <li class="list-group-item"><a href="#" class="text-decoration-none text-dark">My Returns</a></li>
                <li class="list-group-item"><a href="#" class="text-decoration-none text-dark">My Cancellations</a></li>
            </ul>
            <h4 class="fw-bold mt-4">My Wishlist</h4>
            <ul class="list-group">
                <li class="list-group-item"><a href="#" class="text-decoration-none text-dark">Wishlist</a></li>
            </ul>
        </div>

        <!-- Profile Form -->
        <div class="col-md-9">
            <h5 class="text-muted">Home / <span class="fw-bold">My Account</span></h5>
            <div class="card p-4 mt-3 shadow-sm">
                <h3 class="fw-bold">Edit Your Profile</h3>
                <form>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">First Name</label>
                            <input type="text" class="form-control" value="Md">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Last Name</label>
                            <input type="text" class="form-control" value="Rimel">
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" value="rimel111@gmail.com">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Address</label>
                            <input type="text" class="form-control" value="Kingston, 5236, United States">
                        </div>
                    </div>

                    <h4 class="mt-4">Password Changes</h4>
                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">Current Password</label>
                            <input type="password" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">New Password</label>
                            <input type="password" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control">
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="reset" class="btn btn-light">Cancel</button>
                        <button type="submit" class="btn btn-danger">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
