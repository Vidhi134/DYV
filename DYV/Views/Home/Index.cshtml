<!-- Hero Section -->
<div class="container my-4">
    <img src="https://img.freepik.com/premium-photo/trio-pink-shopping-baskets-with-handles_1089479-13782.jpg" class="img-fluid w-100" alt="Promo Banner">
</div>

<!-- Flash Sales Section -->
<div class="container my-5">
    <h2 class="fw-bold">Flash Sales</h2>
    <div class="row">
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-md-3">
                <div class="card">
                    <img src="/Images/product.jpg" class="card-img-top" alt="Product">
                    <div class="card-body">
                        <h5 class="card-title">Product Name</h5>
                        <p class="card-text">$50.00</p>
                        <a asp-action="AddToCart" asp-controller="Cart" class="btn btn-danger w-100">Add to Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Best Sellers Section -->
<div class="container my-5">
    <h2 class="fw-bold">Best Selling Products</h2>
    <div class="row">
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-md-3">
                <div class="card">
                    <img src="/Images/best-seller.jpg" class="card-img-top" alt="Best Seller">
                    <div class="card-body">
                        <h5 class="card-title">Best Seller</h5>
                        <p class="card-text">$60.00</p>
                        <button class="btn btn-danger w-100">Buy Now</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Browse by Category -->
<div class="container my-5">
    <h2 class="fw-bold">Browse By Category</h2>
    <div class="row">
        <div class="col-md-2">
            <a asp-action="Wishlist" asp-controller="Account" class="text-decoration-none">
                <div class="category-box text-center p-3 border rounded shadow-sm">
                    <p>Stationery</p>
                </div>
            </a>
        </div>
        <div class="col-md-2">
            <a asp-action="Wishlist" asp-controller="Account" class="text-decoration-none">
                <div class="category-box text-center p-3 border rounded shadow-sm">
                    <p>Gaming</p>
                </div>
            </a>
        </div>
        <div class="col-md-2">
            <a asp-action="Wishlist" asp-controller="Account" class="text-decoration-none">
                <div class="category-box text-center p-3 border rounded shadow-sm">
                    <p>Clothing</p>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- New Arrivals Section -->
<div class="container my-5">
    <h2 class="fw-bold">New Arrivals</h2>
    <div class="row">
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-md-3">
                <div class="card">
                    <img src="/Images/new-arrival.jpg" class="card-img-top" alt="New Arrival">
                    <div class="card-body">
                        <h5 class="card-title">New Arrival</h5>
                        <p class="card-text">$70.00</p>
                        <button class="btn btn-primary w-100">Shop Now</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
