<!-- Hero Section -->
<div class="container my-4">
    <img src="https://5.imimg.com/data5/SELLER/Default/2024/6/424892038/AJ/ZQ/JE/181460256/online-shopping-website-500x500.webp" class="img-fluid w-100" alt="Promo Banner">
</div>

<!-- Flash Sales Section -->
<div class="container my-5">
    <h2 class="fw-bold">Flash Sales</h2>
    <div class="row">
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-md-3">
                <div class="card">
                    <img src="/Images/product.jpg" class="card-img-top" alt="Product">
                    <div class="card-body">
                        <h5 class="card-title">Product Name</h5>
                        <p class="card-text">$50.00</p>
                        <a asp-action="AddToCart" asp-controller="Cart" class="btn btn-danger w-100">Add to Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Best Sellers Section -->
<div class="container my-5">
    <h2 class="fw-bold">Best Selling Products</h2>
    <div class="row">
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-md-3">
                <div class="card">
                    <img src="/Images/best-seller.jpg" class="card-img-top" alt="Best Seller">
                    <div class="card-body">
                        <h5 class="card-title">Best Seller</h5>
                        <p class="card-text">$60.00</p>
                        <button class="btn btn-danger w-100">Buy Now</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Browse by Category -->
<div class="container my-5">
    <h2 class="fw-bold">Browse By Category</h2>
    <div class="row">
        <div class="col-md-2">
            <div class="category-box text-center p-3 border rounded shadow-sm">
                <p>Stationery</p>
            </div>
        </div>
        <div class="col-md-2">
            <div class="category-box text-center p-3 border rounded shadow-sm">
                <p>Gaming</p>
            </div>
        </div>
        <div class="col-md-2">
            <div class="category-box text-center p-3 border rounded shadow-sm">
                <p>Clothing</p>
            </div>
        </div>
    </div>
</div>

<!-- New Arrivals Section -->
<div class="container my-5">
    <h2 class="fw-bold">New Arrivals</h2>
    <div class="row">
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-md-3">
                <div class="card">
                    <img src="/Images/new-arrival.jpg" class="card-img-top" alt="New Arrival">
                    <div class="card-body">
                        <h5 class="card-title">New Arrival</h5>
                        <p class="card-text">$70.00</p>
                        <button class="btn btn-primary w-100">Shop Now</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Footer -->
<!-- Footer Section -->
<footer class="mt-5 bg-dark text-white py-5">
    <div class="container">
        <div class="row">
            <!-- Exclusive -->
            <div class="col-md-3">
                <h5>Exclusive</h5>
                <p>Subscribe</p>
                <p>Get 10% off your first order</p>
                <input type="email" class="form-control" placeholder="Enter your email">
            </div>

            <!-- Support -->
            <div class="col-md-3">
                <h5>Support</h5>
                <p>111 Bijoy Sarani, Dhaka, Bangladesh.</p>
                <p>exclusive@gmail.com</p>
                <p>+88015-88888-9999</p>
            </div>

            <!-- Account -->
            <div class="col-md-2">
                <h5>Account</h5>
                <p>My Account</p>
                <p>Login / Register</p>
                <p>Cart</p>
                <p>Wishlist</p>
                <p>Shop</p>
            </div>

            <!-- Quick Links -->
            <div class="col-md-2">
                <h5>Quick Link</h5>
                <p>Privacy Policy</p>
                <p>Terms Of Use</p>
                <p>FAQ</p>
                <p>Contact</p>
            </div>

            <!-- Download App -->
            <div class="col-md-2">
                <h5>Download App</h5>
                <p>Save $3 with App New User Only</p>
                <img src="https://via.placeholder.com/100x40" alt="Google Play">
                <img src="https://via.placeholder.com/100x40" alt="App Store">
            </div>
        </div>

        <hr class="mt-4 bg-white">

        <div class="text-center">
            <p>© Copyright Rimel 2022. All rights reserved.</p>
            <p>
                <i class="bi bi-facebook"></i>
                <i class="bi bi-twitter"></i>
                <i class="bi bi-instagram"></i>
                <i class="bi bi-linkedin"></i>
            </p>
        </div>
    </div>
</footer>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
